@model IEnumerable<TST_Music_Instruments_Store.Models.CartItem>

@{
    ViewBag.Title = "Index";
    var i = 0;
}

<h2>Shopping cart</h2>

<table class="table">
    <tr>
        <th>
            No.
        </th>
        <th>
            Name
        </th>
        <th>
            Image
        </th>
        <th>
            Price
        </th>
        <th>
            Quantity
        </th>
        <th>
            Total price
        </th>
        <th>
            Remove product
        </th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @(i += 1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.NameOfProduct)
            </td>
            <td>
                <img src="@item.Product.ImagePath" width="150" height="100" />
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td>
                <a href="/CartItems/RemoveItemQuantity?ProductId=@item.ProductId">
                    -
                </a>
                @Html.DisplayFor(modelItem => item.Quantity)
                <a href="/CartItems/AddItemQuantity?ProductId=@item.ProductId">
                    +
                </a>
            </td>
            <td>
                $@(item.Product.Price * item.Quantity)
            </td>
            <td>
                <a href="/CartItems/RemoveItemFromCart?ProductId=@item.ProductId" class="btn btn-md btn-default">Remove product</a>
            </td>
        </tr>
    }

</table>

<div class="row">
    <div class="col-md-6">
        <p><b>Total price: $@ViewBag.Total</b></p>
    </div>
</div>
@if (i >= 1)
{
    <div class="row">
        <div class="col-md-6">
            <a href="/CartItems/Purchase" id="purchase" class="btn btn-md btn-default">Order</a>
        </div>
    </div>
}
