
@{
    ViewBag.Title = "Purchase";
}

<div class="container">
    <div class="row">
        <br /><br /><br />
    </div>
    <div class="row">
        <div class="col-md-12" style="font-size:medium;">
            <h2 style="width: 65%;margin-left: auto;margin-right: auto;">Thank you for your order: @ViewBag.FirstName @ViewBag.LastName</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="font-size:large;">
            <h3 style="width: 80%;margin-left: auto;margin-right: auto;">Your products will be delivered to this address: <b>@ViewBag.Address</b></h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" style="font-size:medium;">
            <a style="margin-left: auto;margin-right: auto;width: 160px;display:block;" href="/" class="btn btn-md btn-default">Go back!</a>
        </div>
    </div>
</div>

