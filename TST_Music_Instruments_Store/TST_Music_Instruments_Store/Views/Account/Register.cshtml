@model TST_Music_Instruments_Store.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container" style="margin-top: 120px;">
    <div class="row">
        <div class="col">
            <img src="~/Content/Images/sign-up.jpg" />
        </div>
        <div class="col">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account.</h4>
                <hr />
                <div class="form-group mb-1">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                    <div class="pt-2 text-danger" style="margin-left: 15px;">
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                </div>
                <div class="form-group mb-1">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                    <div class="pt-2 text-danger" style="margin-left: 15px;">
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                </div>
                <div class="form-group mb-1">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="pt-2 text-danger" style="margin-left: 15px;">
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group mb-1">
                    @Html.LabelFor(m => m.Address, new { @class = "col-md control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    </div>
                    <div class="pt-2 text-danger" style="margin-left: 15px;">
                        @Html.ValidationMessageFor(m => m.Address)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="pt-2 text-danger" style="margin-left: 15px;">
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div class="pt-2 text-danger" style="margin-left: 15px;">
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-dark" value="Register" />
                    </div>
                </div>
            }

        </div>
    </div>
    <div class="row">
        <br /><br /><br /><br />
    </div>
</div>

