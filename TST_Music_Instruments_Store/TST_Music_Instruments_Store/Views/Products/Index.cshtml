@model IEnumerable<TST_Music_Instruments_Store.Models.Product>

@{
    ViewBag.Title = "Index";
}

<div class="container" style="margin-bottom: 86.4px; margin-top: 54.4px">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <div class="row">
        <div class="col-2">
            <div class="container pr-0 pl-0">
                <div class="row text-center">
                    <h4>Filter</h4>
                </div>
                <hr />
                <div class="row">
                    <div class="col">
                        <h4>Company</h4>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Firma 1" id="companyName1">
                            <label class="form-check-label" for="companyName1">
                                companyName1
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Firma 1" id="companyName2">
                            <label class="form-check-label" for="companyName2">
                                companyName2
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Firma 1" id="companyName3">
                            <label class="form-check-label" for="companyName3">
                                companyName3
                            </label>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col">
                        <h5>Instrument Name</h5>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Firma 1" id="InstrumentName1">
                            <label class="form-check-label" for="InstrumentName1">
                                InstrumentName1
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Firma 1" id="InstrumentName2">
                            <label class="form-check-label" for="InstrumentName2">
                                InstrumentName2
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="Firma 1" id="InstrumentName3">
                            <label class="form-check-label" for="InstrumentName3">
                                InstrumentName3
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-10">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-4 mb-3">
                            <div class="card border-dark">
                                    <div class="card-header text-center bg-dark text-white">
                                        <a href="Details/@item.ProductId" class="text-white">
                                            @item.NameOfProduct
                                        </a>
                                    </div>
                                    <div class="card-body text-center">
                                        <a href="Details/@item.ProductId">
                                            <img src="@item.ImagePath" class="img img-thumbnail border-dark" style="width: 200px; height: 200px;" />
                                        </a>
                                        <hr class="bg-dark" />
                                        <p class="text-center mb-0">Price: @item.Price</p>
                                    </div>
                                <button class="btn-outline-secondary border-right-0 border-bottom-0 border-left-0 btn">
                                    Add to Cart <i class="fas fa-shopping-cart"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


