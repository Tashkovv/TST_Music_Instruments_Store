@using Microsoft.AspNet.Identity
@using TST_Music_Instruments_Store.Utilities
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li class="@Html.IsActive("Account", "Login")">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })</li>
    <li class="@Html.IsActive("ShoppingCart", "Index")">@Html.ActionLink("Cart Items", "Index", "CartItems", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
</ul>
}
