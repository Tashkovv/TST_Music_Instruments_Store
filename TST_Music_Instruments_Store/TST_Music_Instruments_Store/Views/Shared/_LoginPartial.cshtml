@using Microsoft.AspNet.Identity
@using TST_Music_Instruments_Store.Utilities
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="nav-link">
                Hello @User.Identity.Name!
            </li>
            <li>
                <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </li>
            <li class="@Html.IsActive("CartItems", "Index")">
                @Html.ActionLink(" ", "Index", "CartItems", new { area = "" }, new { @class = "nav-link fas fa-shopping-cart", style = "padding-top: 13px;" })
            </li>
            <li class="nav-item @Html.IsActive("Home", "About")">
                @Html.ActionLink("About us", "About", "Home", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item @Html.IsActive("Home", "Contact")">
                @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="@Html.IsActive("Account", "Login")">
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })
        </li>
        @if (User.Identity.IsAuthenticated)
        {
            <li class="@Html.IsActive("CartItems", "Index")">
                @Html.ActionLink(" ", "Index", "CartItems", new { area = "" }, new { @class = "nav-link fas fa-shopping-cart", style = "padding-top: 13px;" })
            </li>
        }
        <li class="nav-item @Html.IsActive("Home", "About")">
            @Html.ActionLink("About us", "About", "Home", new { area = "" }, new { @class = "nav-link" })
        </li>
        <li class="nav-item @Html.IsActive("Home", "Contact")">
            @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
        </li>
    </ul>
}
